{% extends 'base.html.twig' %}

{% block title %}{{ title }}
{% endblock %}

{% block body %}
	<!-- Logo and Nav -->
	{% include "partials/_top_buttons.html.twig" %}

	<!-- Fullscreen Navigation -->
	{% include "partials/_fullscreen_nav.html.twig" %}

	<div class="container mt-5">
		<h1 class="text-center mb-5">Articles</h1>
		<div class="row justify-content-start">
			{% for article in articles %}
			{% set auteur = article.users %}
			<div class="col-6 col-lg-3">
				<div class="card m-3">
					<img src="{{ article.mainImage }}" class="card-img-top" alt="{{ article.title }}">
					<div class="card-body">
						<h5 class="card-title">{{ article.title }}</h5>
						<p class="card-text">{{ article.introduction|u.truncate(50, ' ...') }}</p>
						<p class="card-text">Created by {{ auteur }} on {{ article.createdAt }}</p>
						<div class="d-flex justify-content-between">
							<a href="{{ path('single_article', {'slug': article.slug }) }}" class="btn__main">Show</a>
							{#<a href="{{ path('edit_project', {'slug': project.slug }) }}" class="btn__main">Edit</a>
							<a href="{{ path('delete_project', {'slug': project.slug }) }}" class="btn__main">Delete</a> #}
						</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>

	<!-- Footer -->
	{% include "partials/_footer.html.twig" %}
{% endblock %}

