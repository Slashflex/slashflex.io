{% extends 'base.html.twig' %}

{% block titre %}
	{{ title }}
{% endblock %}

{% block body %}
    <div id="main">
		
		<!-- Logo -->
		{% include "partials/_top_buttons.html.twig" %}

		<!-- Fullscreen Navigation -->
		{% include "partials/_fullscreen_nav.html.twig" %}

		{% for message in app.flashes('success') %}
			<div class="flash-notice">
				{{ message }}
			</div>
		{% endfor %}

		{% for message in app.flashes('error') %}
			<div class="flash-notice">
				{{ message }}
			</div>
		{% endfor %}
		
		<div class="create container">
			<div class="pt-5 mt-5">
				<div class="stack__text">
					<div class="stack__text--projects fs-1 gs_reveal gs_reveal_fromLeft">Ask for a new</div>
					<div class="stack__text--stack mb-2 fs-2 gs_reveal gs_reveal_fromBottom">CONFIRMATION EMAIL</div>
				</div>

				<form method="POST" class="form pb-5" autocomplete="off">
					<div class="form__errors">
						{% if error %}
							<ul>
								<li>
									{{ error.messageKey|trans(error.messageData, 'security') }}
								</li>
							</ul>
						{% endif %}
					</div>

					<div class="form__group">
						<input type="email" name="resend_token_form[email]" class="form__input" placeholder="Email address" id="email" required>
						<label for="email" class="form__label">Email address</label>
					</div>
                    
					{# <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}"> #}
					
					<div class="form-group">
						<button type="submit" class="button__login mx-auto d-block">Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Footer -->
	{% include "partials/_footer.html.twig" %}
{% endblock %}
