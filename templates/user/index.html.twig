{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
    <!-- Logo -->
	{% include "partials/_top_buttons.html.twig" %}

	<!-- Fullscreen Navigation -->
	{% include "partials/_fullscreen_nav.html.twig" %}
    {% for message in app.flashes('success') %}
		<div class="flash-notice alert-success" style="top: 0">
			{{ message }}
		</div>
	{% endfor %}
    
    <div class="container">
        <h1 class="text-center mt-5">Hello {{ user }}</h1>

        <p class="moving">Email : {{ user.email }}</p>
        <p class="moving">Account created {{ user.getDate }}</p>
        <a href="{{ path('edit_me', {'slug': user.slug}) }}" class="button__login moving">Edit</a>
        <a href="{{ path('upload_avatar', {'slug': user.slug}) }}" class="button__login moving">Upload avatar</a>
        <a href="{{ path('logout') }}" class="button__login moving">Logout</a>
        {% if app.user.roleUser[0].name == 'ROLE_ADMIN' %}
            <a href="{{ path('admin') }}" class="button__login moving">Dashboard</a>
        {% endif %}

        <div class="avatar">
            {% if user.avatar != 'avatar.png' %}
                <img src="/uploads/avatars/{{ user.slug }}/{{ user.avatar }}" alt="{{ user.__toString }}" class="avatar__image">
            {% else %}
                <img src="/uploads/avatars/{{ user.avatar }}" alt="{{ user.__toString }}" class="avatar__image">
            {% endif %}
        </div>
    </div>

	<!-- Footer -->
	{% include "partials/_footer.html.twig" %}
{% endblock %}

{% block javascripts %}{% endblock %}

