{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
    <!-- Logo -->
	{% include "partials/_top_buttons.html.twig" %}

	<!-- Fullscreen Navigation -->
	{% include "partials/_fullscreen_nav.html.twig" %}

    <div class="container">
        <h1 class="text-center mt-5">Hello {{ user }}</h1>

        <p>Email : {{ user.email }}</p>
        <p>Account created on {{ user.createdAt }}</p>
        <a href="{{ path('edit_me', {'slug': user.slug}) }}" class="button__login">Edit</a>
        {% if app.user.roleUser[0].name == 'ROLE_ADMIN' %}
            <a href="{{ path('admin') }}" class="button__login">Dashboard</a>
        {% endif %}
    </div>

	<!-- Footer -->
	{% include "partials/_footer.html.twig" %}
{% endblock %}

{% block javascripts %}{% endblock %}

