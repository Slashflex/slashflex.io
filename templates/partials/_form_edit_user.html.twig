<div class="create container pb-5">
    <div class="pt-5 mt-5">
        <h1 class="heading__secondary">
            Edit your profile
        </h1>

        {{ form_start(form._token, {'attr': { 'class': 'form', 'autocomplete': 'off' }}) }}
            <div class="form__group">
                {{ form_widget(form.firstname, {'attr': { 'type': 'text', 'class': 'form__input', 'id': 'firstname' }}) }}
                <label for="firstname" class="form__label">Firstname</label>
            </div>

            <div class="form__group">
                {{ form_widget(form.lastname, {'attr': { 'type': 'text', 'class': 'form__input', 'id': 'lastname' }}) }}
                <label for="lastname" class="form__label">Lastname</label>
            </div>

            <div class="form__group">
                {{ form_widget(form.email, {'attr': { 'type': 'text', 'class': 'form__input', 'id': 'email' }}) }}
                <label for="email" class="form__label">Email address</label>
            </div>

            <div class="form__group">
                {{ form_widget(form.password, {'attr': { 'class': 'form__input', 'type': 'password', 'value': '•••••••••••' }}) }}
                <label for="password" class="form__label">Password</label>
            </div>

            <div class="form__group">
                {{ form_widget(form.description, {'attr': { 'type': 'text', 'class': 'form__input', 'id': 'description' }}) }}
                <label for="description" class="form__label">Description</label>
            </div>

            <div class="form__group">
                {{ form_widget(form.login, {'attr': { 'type': 'text', 'class': 'form__input', 'id': 'login' }}) }}
                <label for="login" class="form__label">Login</label>
            </div>

            {# <div class="form__group">
                {{ form_widget(form.fileName) }}
                <label for="avatar" class="form__label">Avatar</label>
            </div> #}

            <div class="form-group">
                <button type="submit" class="button__login mx-auto d-block">Edit</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>