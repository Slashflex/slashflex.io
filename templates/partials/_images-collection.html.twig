{% block _project_attachments_widget %}
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <a class="button__login text-white add-image" id="add-images-btn">
            + Ajouter une image
        </a>
    </div>
{% endblock %}

{% block _project_attachments_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _project_attachments_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        {{ form_widget(form) }}
        <button type="button" data-action="delete" data-target="#block_{{ id }}" class="button__login--del text-white add-image">X</button>
    </div>
{% endblock %}