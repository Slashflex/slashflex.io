{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<!-- Logo and Nav -->
	{% include "partials/_top_buttons.html.twig" %}

	<div class="create container">
		<div class="create__form mx-auto">
			<h2 class="heading-secondary text-center mb3">
				Create a new project
			</h2>
			{% form_theme form with ['project/_images-collection.html.twig', 'project/_fields-collection.html.twig'] %}
			{{ form_start(form, {'attr': {'class': 'w-100 m-auto'}}) }}
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="title-field">Titre</label>
						{{ form_errors(form.title) }}
						{{ form_widget(form.title, {'attr': { 'class': 'form-control form-control-lg' }}) }}
					</div>

					<div class="form-group">
						<label for="introduction-field">Introduction</label>
						{{ form_errors(form.introduction) }}
						{{ form_widget(form.introduction, {'attr': { 'class': 'form-control form-control-lg' }}) }}
					</div>

					<div class="form-group">
						<label for="content-field">Contenu</label>
						{{ form_errors(form.content_1) }}
						{{ form_widget(form.content_1, {'attr': { 'class': 'form-control form-control-lg' }}) }}
					</div>
				
					<div class="form-group">
						<label for="content-field">Contenu</label>
						{{ form_errors(form.content_2) }}
						{{ form_widget(form.content_2, {'attr': { 'class': 'form-control form-control-lg' }}) }}
					</div>

					<div class="form-group">
						<label for="content-field">Contenu</label>
						{{ form_errors(form.content_3) }}
						{{ form_widget(form.content_3, {'attr': { 'class': 'form-control form-control-lg' }}) }}
					</div>

					<div class="form-group">
						<label for="image-field">Image de couverture</label>
						{{ form_errors(form.main_image) }}
						{{ form_widget(form.main_image, {'attr': { 'class': 'form-control form-control-lg' }}) }}
					</div>
				</div>

				<div class="col-md-6">
					{% block project_images_widget %}
						{{ form_widget(form) }}
					{% endblock %}
				</div>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-primary mx-auto d-block">Cr√©er l'annonce</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
	<!-- Section Works -->
	{% include "partials/_footer.html.twig" %}
    
	<!-- Bottom Navigation -->
	{% include "partials/_bottom_nav.html.twig" %}
{% endblock %}
